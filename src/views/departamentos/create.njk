{% extends "../index.njk" %}

{% block content %}
  <div class="pricing-header py-3 pb-md-4 mx-auto">
    <h3 class="display-5">Cadastro de Departamento</h3>
  </div>
  <form action="/departamentos/store" method="post">
    <div class="form-row">
      <div class="form-group col-md-2">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Ex: Logistica">
      </div>
      <div class="form-group col-md-2">
        <label for="codigo">CÃ³digo</label>
        <input type="text" class="form-control" id="codigo" name="codigo" placeholder="Ex: 102" maxlength="3">
      </div>
      <div class="form-group col-md-2">
        <label for="iniciogerente">Inicio do gerente</label>
        <input type="date" class="form-control" id="iniciogerente" name="iniciogerente" placeholder="Ex: 1990-04-12" maxlength="10">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-3">
        <label for="gerente">Gerente</label>
        <select id="gerente" name="gerente" class="form-control">
          <option selected>Selecione...</option>
          {% for gerente in gerentes %}
            <option value="{{ gerente.codigo }}">{{ gerente.nome }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
  </form>
{% endblock %}