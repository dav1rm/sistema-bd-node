{% extends "../index.njk" %}

{% block content %}
  <div class="pricing-header py-3 pb-md-4 mx-auto  d-flex flex-row justify-content-between">
    <h3 class="display-5">Relátorio gerado</h3>
    <a href="/relatorios/create" class="btn btn-primary">Novo Relatório</a>
  </div>
  <table class="table table-sm">
    <thead>
      <tr>
        {% for field in data.fields %}
          <th scope="col">{{ field.name }}</th>
        {% endfor %}
      </tr>
    </thead>
    <tbody>
      {% for row in data.rows %}
        <tr>
          {% for field in data.fields %}
            <td scope="row">{{ row[field.name] }}</th>
          {% endfor %}
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}