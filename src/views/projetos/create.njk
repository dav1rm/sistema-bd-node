{% extends "../index.njk" %}

{% block content %}
  <div class="pricing-header py-3 pb-md-4 mx-auto">
    <h3 class="display-5">Cadastro de Projeto</h3>
  </div>
  <form action="/projetos/store" method="post">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Ex: Projeto de mobilidade urbana">
      </div>
      <div class="form-group col-md-2">
        <label for="codigo">Código</label>
        <input type="text" class="form-control" id="codigo" name="codigo" placeholder="Ex: 102" maxlength="3">
      </div>
      <div class="form-group col-md-4">
        <label for="departamento">Departamento</label>
        <select id="departamento" name="departamento" class="form-control">
          <option selected>Selecione...</option>
          {% for departamento in departamentos %}
            <option value="{{ departamento.codigo }}">{{ departamento.nome }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="local">Local</label>
        <input type="text" class="form-control" id="local" name="local" placeholder="Ex: Natal">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
  </form>
{% endblock %}